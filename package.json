{
  "name": "photon-cli",
  "displayName": "Photon CLI",
  "type": "module",
  "bin": {
    "photon": "./index.js"
  },
  "scripts": {
    "build": "yarn run parcel build \"./index.ts\" --no-source-maps",
    "envnode": "echo \"#! /usr/bin/env node\\n\" > index.temp && cat index.js >> index.temp && mv index.temp index.js",
    "test": "node ./index.js \"../homepage/src/\"",
    "deploy": "yarn publish --access public"
  },
  "version": "0.1.5",
  "description": "compiler for the photon web-framework",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/photon-framework/cli.git"
  },
  "bugs": {
    "url": "https://github.com/photon-framework/cli/issues"
  },
  "homepage": "https://github.com/photon-framework",
  "author": "Frank Mayer <frank.mayer1907@protonmail.com>",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@frank-mayer/dom-serializer": "^2.0.2",
    "@parcel/config-default": "^2.2.1",
    "@parcel/core": "^2.2.1",
    "@parcel/reporter-dev-server": "^2.3.0",
    "@parcel/resolver-default": "^2.2.1",
    "domhandler": "^4.3.0",
    "domutils": "^2.8.0",
    "htmlparser2": "^7.2.0"
  },
  "devDependencies": {
    "parcel": "^2.2.1",
    "typescript": "^4.6.0-dev.20220204"
  }
}
